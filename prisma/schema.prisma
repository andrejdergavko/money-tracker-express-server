generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  uuid           String    @id @default(uuid())
  userId         String
  date           String
  currency       String
  description    String?
  amount         Float
  amountInUsd    Float
  bank           String
  categoryUuid   String?
  category       Category? @relation(fields: [categoryUuid], references: [uuid])

  @@index([categoryUuid])
  @@index([userId])
}

model Category {
  uuid         String        @id @default(uuid())
  label        String        @unique
  color        String
  transactions Transaction[]
}
